<?xml version='1.0' encoding='utf-8'?>
<widget id="com.joads" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JoADS</name>
    <description>
        Jordan ADS
    </description>
    <author email="ahmednasa4@gmail.com" href="">
        Ahmed Nabeel Al-Gobari
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/mipmap-ldpi/joads.png" />
        <icon density="mdpi" src="www/res/icon/android/mipmap-mdpi/joads.png" />
        <icon density="hdpi" src="www/res/icon/android/mipmap-hdpi/joads.png" />
        <icon density="xhdpi" src="www/res/icon/android/mipmap-xhdpi/joads.png" />
        <icon density="xxhdpi" src="www/res/icon/android/mipmap-xxhdpi/joads.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/mipmap-xxxhdpi/joads.png" />
        <splash density="land-ldpi" src="www/res/screen/android/screen-ldpi-landscape.png" />
        <splash density="land-mdpi" src="www/res/screen/android/screen-mdpi-landscape.png" />
        <splash density="land-hdpi" src="www/res/screen/android/screen-hdpi-landscape.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/screen-xhdpi-landscape.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/screen-xhdpi-landscape.png" />
        <splash density="port-ldpi" src="www/res/screen/android/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="www/res/screen/android/screen-mdpi-portrait.png" />
        <splash density="port-hdpi" src="www/res/screen/android/screen-hdpi-portrait.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
    </platform>
    <preference name="SplashScreenDelay" value="5000" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.0" />
</widget>
